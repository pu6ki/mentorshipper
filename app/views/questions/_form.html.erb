<div class="wrapper">
  <div class="col-md-8 offset-md-2 col-sm-10 offset-sm-1">
    <h1 class="text-center heading"><%= form_title %></h1>

    <%= form_for @question, html: { class: 'text-center' } do |f| %>
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control'%>

      <%= f.label :content, class: 'form-label'%>
      <%= f.text_area :content, rows: 7, class: 'form-control' %>

      <% if @question.new_record? %>
        <%= f.label :technology, class: 'form-label' %>
        <br />
        <%= f.select(:technology_id, options_for_select(current_user.technologies.map { |t| [t.name, t.id] }), {}, class: 'form-control') %>
      <% end %>

      <br />

      <%= f.submit class: 'btn btn-primary'%>
    <% end %>
  </div>
</div>
