<div class="wrapper">
  <div class="col-md-10 offset-md-1 col-sm-10 offset-sm-1">
  
    <h1 class="text-center heading"><%= @question.title %></h1>

    <div class="card">
      <div class="card-body">
        <p class="text-info">Solved: <%= @question.solved? %></p>
        <%= markdown(@question.content) %>
        <hr />
        <div class="d-inline-flex w-100 justify-content-between">
          <small class="text-muted">Asked by "<%= @question.team %>"</small>
          <small>Asked on <span class="text-muted"><%= @question.created_at.strftime('%d-%m-%Y %H:%M') %></span></small>          
        </div>
      </div>
    </div>

    <hr>
  </div>
  <div class="col-md-8 offset-md-2">
    <% if @question.answers.empty? %>
      <h3 class="text-center heading">Nobody has answered this question yet.</h3>
    <% else %>
      <% @question.answers.each do |answer| %>
        <%= render answer %>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-10 offset-md-1">
    <%= render 'answers/form' %>
  </div>
</div>
